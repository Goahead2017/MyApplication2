<?xml version="1.0" encoding="utf-8"?>
<com.mredrock.cyxbs.freshman.myapplication.EnterSchool.JCardView
    xmlns:tools="http://schemas.android.com/tools"
    app:cardCornerRadius="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:layout_marginTop="16dp"
   >
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/freshman_white">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="53dp">

                    <TextView
                        android:id="@+id/secret_tv"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="15dp"
                        android:textColor="#333333"
                        android:textSize="16sp"
                        />

                    <ImageView
                        android:id="@+id/secret_click"
                        android:layout_width="19dp"
                        android:layout_height="14dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="20dp"
                        android:src="@drawable/freshman_secret_click"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="10dp"
                        tools:ignore="ContentDescription" />
        </RelativeLayout>
        
            <TextView
                android:id="@+id/id_expand_view"
                android:visibility="gone"
                android:paddingLeft="49dp"
                android:gravity="left|center_vertical"
                android:layout_below="@id/tv"
                android:textSize="14sp"
                android:textColor="#666666"
                android:text="这是展开的view\n这是展开的view\n这是展开的view"
                android:layout_width="match_parent"
                android:layout_height="145dp"
                tools:ignore="NotSibling,RtlHardcoded,RtlSymmetry"
                android:paddingStart="49dp" />

        </RelativeLayout>
    </LinearLayout>

</com.mredrock.cyxbs.freshman.myapplication.EnterSchool.JCardView>