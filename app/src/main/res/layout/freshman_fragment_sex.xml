<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/freshman_sex_bottom_2"
    >

   <ImageView
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:background="@drawable/freshman_sex_bottom_1"
       android:layout_marginTop="15dp"
       android:layout_marginLeft="25dp"
       android:layout_marginRight="25dp"
       android:layout_marginBottom="150dp"
       />

   <ImageView
       android:layout_width="8dp"
       android:layout_height="5dp"
       android:src="@drawable/freshman_sex_1"
       android:layout_marginTop="34dp"
       android:layout_marginLeft="30dp"
       android:layout_marginStart="30dp"
       android:scaleType="fitXY"
       tools:ignore="ContentDescription" />

   <ImageView
       android:layout_width="8dp"
       android:layout_height="12dp"
       android:src="@drawable/freshman_sex_2"
       android:layout_marginTop="39dp"
       android:layout_marginLeft="30dp"
       android:layout_marginStart="30dp"
       android:scaleType="fitXY"
       tools:ignore="ContentDescription" />

   <TextView
       android:id="@+id/sex"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginLeft="40dp"
       android:layout_marginTop="35dp"
       android:textColor="#DB0083FF"
       android:textSize="13sp"
       android:layout_marginStart="40dp" />

   <ImageView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:src="@drawable/freshman_sex_man"
       android:layout_marginLeft="107dp"
       android:layout_alignParentBottom="true"
       android:layout_marginBottom="173dp"
       android:layout_marginStart="107dp"
       tools:ignore="ContentDescription" />

   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="男"
       android:textSize="15sp"
       android:textColor="#000000"
       android:layout_alignParentBottom="true"
       android:layout_marginBottom="187dp"
       android:layout_marginLeft="152dp"
       android:layout_marginStart="152dp" />

   <ImageView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignParentEnd="true"
       android:layout_marginRight="118dp"
       android:layout_alignParentBottom="true"
       android:layout_marginBottom="173dp"
       android:src="@drawable/freshman_sex_woman"
       tools:ignore="ContentDescription"
       android:layout_alignParentRight="true"
       android:layout_marginEnd="118dp" />

   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignParentEnd="true"
       android:text="女"
       android:textColor="#000000"
       android:textSize="15sp"
       android:layout_marginRight="108dp"
       android:layout_alignParentBottom="true"
       android:layout_marginBottom="187dp"
       android:layout_alignParentRight="true"
       android:layout_marginEnd="108dp" />

   <com.mredrock.cyxbs.freshman.myapplication.DataSecret.DIYView.SexDrawView
       android:id="@+id/sex_draw"
       android:layout_width="match_parent"
       android:layout_height="match_parent" />


</RelativeLayout>